<% if user_signed_in? %>
  <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= truncate("#{current_user.email}", :length => 22, :omission => '...') %> <b class="caret"></b></a>
    <ul class="dropdown-menu">
      <li><%= link_to "Admin", validations_path %></li>
      <li><%= link_to "My Account", edit_user_path(current_user) %></li>
      <li class="divider"></li>
      <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
    </ul>
  </li>
<% else %>
  <button data-login-path="<%= new_user_session_path %>" class="login-button">Login</button>
<% end %>
