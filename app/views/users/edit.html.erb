<div class="page-header">
  <%= link_to users_path, :class => 'btn' do %>
    <i class="icon-list-alt"></i>
    Back
  <% end %>

  <% if can? :manage, @user %>
    <%= link_to @user, :class => 'btn btn-primary' do %>
      <i class="icon-info-sign icon-white"></i>
      Show
    <% end %>
  <% end %>

  <% if can? :manage, @user %>
    <%= link_to user_path(@user), :method => :delete, :confirm => "Are you sure?", :class => 'btn btn-danger' do %>
      <i class="icon-remove icon-white"></i>
      Delete
    <% end %>
  <% end %>

  <h1>Editing User</h1>
</div>

<%= render 'form' %>
